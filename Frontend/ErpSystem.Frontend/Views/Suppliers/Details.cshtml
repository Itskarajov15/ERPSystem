@using ErpSystem.Frontend.Core.Models.Suppliers
@model SupplierViewModel

@{
    ViewData["Title"] = "Детайли за доставчик";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Детайли за доставчик</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="bi bi-pencil me-2"></i>Редактирай
        </a>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Обратно към списъка
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Име</label>
                <p>@Model.Name</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Лице за контакт</label>
                <p>@Model.ContactName</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Имейл</label>
                <p>@Model.Email</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Телефон</label>
                <p>@Model.PhoneNumber</p>
            </div>

            <div class="col-12">
                <label class="form-label fw-bold">Адрес</label>
                <p>@Model.Address</p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this supplier?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div> 