@model ErpSystem.Frontend.Core.Models.Products.ProductEditModel

@{
    ViewData["Title"] = "Редактиране на продукт";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Редактиране на продукт</h2>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Sku" class="form-label"></label>
                            <input asp-for="Sku" class="form-control" />
                            <span asp-validation-for="Sku" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="UnitPrice" class="form-label"></label>
                            <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="ReorderLevel" class="form-label"></label>
                            <input asp-for="ReorderLevel" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="UnitOfMeasureId" class="form-label"></label>
                            <select asp-for="UnitOfMeasureId" class="form-select" asp-items="ViewBag.UnitsOfMeasure">
                                <option value="">Изберете мерна единица</option>
                            </select>
                            <span asp-validation-for="UnitOfMeasureId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-check-lg"></i> Запази
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-lg"></i> Отказ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 