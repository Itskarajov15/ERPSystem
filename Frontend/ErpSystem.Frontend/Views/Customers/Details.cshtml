@using ErpSystem.Frontend.Core.Models.Customers
@model CustomerViewModel

@{
    ViewData["Title"] = "Детайли за клиент";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Детайли за клиент</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="bi bi-pencil me-2"></i>Редактирай
        </a>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Обратно към списъка
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Име</label>
                <p>@Model.Name</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Лице за контакт</label>
                <p>@Model.ContactName</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Имейл</label>
                <p>@Model.Email</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Телефон</label>
                <p>@Model.Phone</p>
            </div>

            <div class="col-12">
                <label class="form-label fw-bold">Адрес</label>
                <p>@Model.Address</p>
            </div>
        </div>
    </div>
</div> 